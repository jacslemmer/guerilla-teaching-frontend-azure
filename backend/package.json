{
  "name": "guerilla-teaching-backend",
  "version": "1.0.0",
  "description": "Backend API for Guerilla Teaching website",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon src/index.ts",
    "build": "tsc",
    "test": "jest"
  },
  "dependencies": {
    "@azure/communication-email": "^1.0.0",
    "@azure/storage-blob": "^12.17.0",
    "@guerilla-teaching/shared-types": "file:../shared",
    "@types/nodemailer": "^7.0.1",
    "@types/pg": "^8.10.0",
    "@types/uuid": "^10.0.0",
    "@types/winston": "^2.4.4",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "morgan": "^1.10.0",
    "nodemailer": "^7.0.6",
    "pg": "^8.11.0",
    "uuid": "^11.1.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.0",
    "@types/morgan": "^1.9.4",
    "@types/node": "^18.15.11",
    "jest": "^29.5.0",
    "nodemon": "^2.0.22",
    "ts-jest": "^29.4.4",
    "ts-node": "^10.9.1",
    "typescript": "^5.9.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "transform": {
      "^.+\\.ts$": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    },
    "moduleNameMapper": {
      "^@guerilla-teaching/shared-types$": "<rootDir>/../shared"
    },
    "testMatch": [
      "**/src/**/*.test.ts",
      "**/src/**/*.spec.ts",
      "**/src/**/test.ts"
    ]
  },
  "keywords": [
    "education",
    "teaching",
    "api",
    "nodejs",
    "typescript"
  ],
  "author": "Guerilla Teaching",
  "license": "ISC",
  "types": "./dist/index.d.ts"
}
